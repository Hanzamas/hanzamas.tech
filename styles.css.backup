/* Reset and Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root {
    /* Anime-inspired color palette */
    --primary-color: #ff6b9d;
    --secondary-color: #c44569;
    --accent-color: #f8b500;
    --bg-dark: #1a1a2e;
    --bg-darker: #16213e;
    --bg-light: #0f3460;
    --text-light: #ffffff;
    --text-muted: #a8a8a8;
    --gradient-primary: linear-gradient(135deg, #ff6b9d 0%, #c44569 100%);
    --gradient-secondary: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    --gradient-accent: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    --shadow-primary: 0 10px 30px rgba(255, 107, 157, 0.3);
    --shadow-secondary: 0 5px 15px rgba(0, 0, 0, 0.3);
    --border-radius: 12px;
    --transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
}

html {
    scroll-behavior: smooth;
}

body {
    font-family: 'Poppins', sans-serif;
    background: var(--bg-dark);
    color: var(--text-light);
    overflow-x: hidden;
    line-height: 1.6;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
}

/* Loading Screen */
.loading-screen {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--bg-darker);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 9999;
    opacity: 1;
    transition: opacity 1s ease-out, visibility 1s ease-out;
}

.loading-screen.hidden {
    opacity: 0;
    visibility: hidden;
}

.loading-content {
    text-align: center;
}

.loading-logo {
    margin-bottom: 30px;
}

.glitch {
    font-size: 3rem;
    font-weight: 700;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    position: relative;
    animation: glitch 2s linear infinite;
}

@keyframes glitch {
    0%, 100% {
        transform: translateX(0);
    }
    20% {
        transform: translateX(-2px);
    }
    40% {
        transform: translateX(2px);
    }
    60% {
        transform: translateX(-2px);
    }
    80% {
        transform: translateX(2px);
    }
}

.loading-bar {
    width: 300px;
    height: 4px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 2px;
    overflow: hidden;
}

.loading-progress {
    height: 100%;
    background: var(--gradient-primary);
    width: 0;
    animation: loading 3s ease-out forwards;
}

@keyframes loading {
    to {
        width: 100%;
    }
}

/* Navigation */
.navbar {
    position: fixed;
    top: 0;
    width: 100%;
    background: rgba(26, 26, 46, 0.9);
    backdrop-filter: blur(10px);
    padding: 1rem 0;
    z-index: 1000;
    transition: var(--transition);
}

.navbar.scrolled {
    background: rgba(26, 26, 46, 0.95);
    box-shadow: var(--shadow-secondary);
}

.nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
}

.nav-logo .logo-text {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-light);
}

.nav-logo .dot {
    color: var(--primary-color);
}

.nav-menu {
    display: flex;
    list-style: none;
    gap: 2rem;
}

.nav-link {
    color: var(--text-light);
    text-decoration: none;
    font-weight: 500;
    position: relative;
    transition: var(--transition);
}

.nav-link:hover {
    color: var(--primary-color);
}

.nav-link::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--gradient-primary);
    transition: width 0.3s ease;
}

.nav-link:hover::after {
    width: 100%;
}

.hamburger {
    display: none;
    flex-direction: column;
    cursor: pointer;
}

.hamburger .bar {
    width: 25px;
    height: 3px;
    background: var(--text-light);
    margin: 3px 0;
    transition: var(--transition);
}

/* Hero Section */
.hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    position: relative;
    overflow: hidden;
}

.hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
}

.animated-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--bg-darker);
    background-image: 
        radial-gradient(circle at 20% 50%, rgba(255, 107, 157, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 80% 20%, rgba(196, 69, 105, 0.1) 0%, transparent 50%);
    animation: backgroundShift 20s ease-in-out infinite alternate;
}

@keyframes backgroundShift {
    0% {
        transform: translateX(-10px) translateY(-10px);
    }
    100% {
        transform: translateX(10px) translateY(10px);
    }
}

.particles {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.particle {
    position: absolute;
    width: 4px;
    height: 4px;
    background: var(--primary-color);
    border-radius: 50%;
    animation: float 6s ease-in-out infinite;
    opacity: 0.6;
}

@keyframes float {
    0%, 100% {
        transform: translateY(0px) rotate(0deg);
        opacity: 0.6;
    }
    50% {
        transform: translateY(-20px) rotate(180deg);
        opacity: 1;
    }
}

.hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    animation: heroFadeIn 1.5s ease-out forwards;
}

@keyframes heroFadeIn {
    from {
        opacity: 0;
        transform: translateY(50px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.hero-title {
    font-size: 3.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    min-height: 4.2rem;
}

.typing-text {
    display: inline-block;
}

.cursor {
    animation: blink 1s infinite;
    color: var(--primary-color);
}

@keyframes blink {
    0%, 50% {
        opacity: 1;
    }
    51%, 100% {
        opacity: 0;
    }
}

.hero-subtitle {
    font-size: 1.5rem;
    color: var(--accent-color);
    margin-bottom: 1rem;
    font-weight: 500;
}

.hero-description {
    font-size: 1.1rem;
    color: var(--text-muted);
    margin-bottom: 2rem;
    line-height: 1.8;
}

.hero-buttons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
}

.btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    border: none;
    border-radius: var(--border-radius);
    text-decoration: none;
    font-weight: 600;
    transition: var(--transition);
    cursor: pointer;
    position: relative;
    overflow: hidden;
}

.btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s;
}

.btn:hover::before {
    left: 100%;
}

.btn-primary {
    background: var(--gradient-primary);
    color: white;
    box-shadow: var(--shadow-primary);
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 15px 35px rgba(255, 107, 157, 0.4);
}

.btn-secondary {
    background: rgba(255, 255, 255, 0.1);
    color: var(--text-light);
    border: 2px solid rgba(255, 107, 157, 0.5);
}

.btn-secondary:hover {
    background: rgba(255, 107, 157, 0.1);
    border-color: var(--primary-color);
    transform: translateY(-2px);
}

.hero-image {
    display: flex;
    justify-content: center;
    align-items: center;
}

.character-container {
    position: relative;
    animation: float 6s ease-in-out infinite;
}

.character-glow {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 120%;
    height: 120%;
    background: radial-gradient(circle, rgba(255, 107, 157, 0.3) 0%, transparent 70%);
    border-radius: 50%;
    z-index: -1;
    animation: pulse 3s ease-in-out infinite;
}

@keyframes pulse {
    0%, 100% {
        transform: translate(-50%, -50%) scale(1);
        opacity: 0.7;
    }
    50% {
        transform: translate(-50%, -50%) scale(1.1);
        opacity: 1;
    }
}

.character-img {
    max-width: 400px;
    width: 100%;
    height: auto;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-primary);
    transition: var(--transition);
    position: relative;
    z-index: 2;
}

.character-img:hover {
    transform: scale(1.05);
    box-shadow: 0 20px 40px rgba(255, 107, 157, 0.4);
}

/* Character Effects */
.character-effects {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 3;
}

.floating-sparkles {
    position: absolute;
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.floating-sparkles::before,
.floating-sparkles::after {
    content: '';
    position: absolute;
    width: 8px;
    height: 8px;
    background: var(--accent-color);
    border-radius: 50%;
    animation: sparkle 4s linear infinite;
    box-shadow: 0 0 10px var(--accent-color);
}

.floating-sparkles::before {
    top: 20%;
    left: 10%;
    animation-delay: 0s;
}

.floating-sparkles::after {
    top: 60%;
    right: 15%;
    animation-delay: 2s;
}

@keyframes sparkle {
    0% {
        opacity: 0;
        transform: translateY(0) scale(0);
    }
    10% {
        opacity: 1;
        transform: translateY(-10px) scale(1);
    }
    90% {
        opacity: 1;
        transform: translateY(-80px) scale(1);
    }
    100% {
        opacity: 0;
        transform: translateY(-100px) scale(0);
    }
}

.aura-effect {
    position: absolute;
    top: -20px;
    left: -20px;
    right: -20px;
    bottom: -20px;
    background: linear-gradient(45deg, 
        rgba(255, 107, 157, 0.1) 0%, 
        rgba(196, 69, 105, 0.15) 25%,
        rgba(248, 181, 0, 0.1) 50%,
        rgba(255, 107, 157, 0.15) 75%,
        rgba(255, 107, 157, 0.1) 100%);
    border-radius: 50%;
    animation: auraRotate 8s linear infinite;
    opacity: 0;
    transition: opacity 0.3s ease;
}

.character-container:hover .aura-effect {
    opacity: 1;
}

@keyframes auraRotate {
    0% {
        transform: rotate(0deg);
    }
    100% {
        transform: rotate(360deg);
    }
}

/* Additional sparkle elements */
.character-container::before,
.character-container::after {
    content: 'âœ¨';
    position: absolute;
    font-size: 1.5rem;
    color: var(--accent-color);
    animation: floatSparkle 5s ease-in-out infinite;
    z-index: 4;
}

.character-container::before {
    top: 10%;
    left: 5%;
    animation-delay: 1s;
}

.character-container::after {
    bottom: 15%;
    right: 8%;
    animation-delay: 3s;
}

@keyframes floatSparkle {
    0%, 100% {
        transform: translateY(0) rotate(0deg);
        opacity: 0.7;
    }
    25% {
        transform: translateY(-15px) rotate(90deg);
        opacity: 1;
    }
    50% {
        transform: translateY(-25px) rotate(180deg);
        opacity: 0.8;
    }
    75% {
        transform: translateY(-15px) rotate(270deg);
        opacity: 1;
    }
}

/* Character hover interaction */
.character-container:hover .character-glow {
    animation-duration: 1.5s;
    background: radial-gradient(circle, rgba(255, 107, 157, 0.5) 0%, rgba(248, 181, 0, 0.2) 50%, transparent 70%);
}

.character-container:hover .character-img {
    filter: brightness(1.1) saturate(1.2);
}

/* Enhanced float animation for character */
@keyframes float {
    0%, 100% {
        transform: translateY(0px) rotate(0deg);
    }
    25% {
        transform: translateY(-15px) rotate(1deg);
    }
    50% {
        transform: translateY(-10px) rotate(0deg);
    }
    75% {
        transform: translateY(-20px) rotate(-1deg);
    }
}

.scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-muted);
    animation: bounce 2s infinite;
}

@keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
        transform: translateX(-50%) translateY(0);
    }
    40% {
        transform: translateX(-50%) translateY(-10px);
    }
    60% {
        transform: translateX(-50%) translateY(-5px);
    }
}

.scroll-line {
    width: 2px;
    height: 30px;
    background: var(--gradient-primary);
    border-radius: 1px;
}

/* Section Styles */
section {
    padding: 5rem 0;
    position: relative;
    transition: all 0.8s cubic-bezier(0.165, 0.84, 0.44, 1);
}

.section-header {
    text-align: center;
    margin-bottom: 4rem;
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.6s ease;
}

.section-header.visible {
    opacity: 1;
    transform: translateY(0);
}

.section-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.section-subtitle {
    font-size: 1.1rem;
    color: var(--text-muted);
}

/* About Section */
.about {
    background: var(--bg-light);
}

.about-content {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 4rem;
    align-items: center;
}

.about-card {
    background: rgba(255, 255, 255, 0.05);
    padding: 2rem;
    border-radius: var(--border-radius);
    border: 1px solid rgba(255, 107, 157, 0.2);
    backdrop-filter: blur(10px);
}

.about-card h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: var(--primary-color);
}

.about-card p {
    margin-bottom: 1rem;
    color: var(--text-muted);
    line-height: 1.8;
}

.about-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin-top: 2rem;
}

.stat-item {
    text-align: center;
}

.stat-number {
    display: block;
    font-size: 2rem;
    font-weight: 700;
    color: var(--primary-color);
}

.stat-label {
    font-size: 0.9rem;
    color: var(--text-muted);
}

.about-image {
    position: relative;
}

.image-container {
    width: 300px;
    height: 300px;
    margin: 0 auto;
    position: relative;
    background: var(--gradient-primary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.floating-elements {
    position: absolute;
    width: 100%;
    height: 100%;
}

.floating-icon {
    position: absolute;
    width: 60px;
    height: 60px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    color: var(--text-light);
    animation: floatAround 10s linear infinite;
}

.floating-icon:nth-child(1) {
    top: 10%;
    left: 20%;
    animation-delay: 0s;
}

.floating-icon:nth-child(2) {
    top: 20%;
    right: 10%;
    animation-delay: -2.5s;
}

.floating-icon:nth-child(3) {
    bottom: 20%;
    right: 20%;
    animation-delay: -5s;
}

.floating-icon:nth-child(4) {
    bottom: 10%;
    left: 10%;
    animation-delay: -7.5s;
}

@keyframes floatAround {
    0% {
        transform: rotate(0deg) translateX(80px) rotate(0deg);
    }
    100% {
        transform: rotate(360deg) translateX(80px) rotate(-360deg);
    }
}

/* Portfolio Section */
.portfolio-filters {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 3rem;
    flex-wrap: wrap;
}

.filter-btn {
    padding: 0.8rem 1.5rem;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 107, 157, 0.3);
    border-radius: var(--border-radius);
    color: var(--text-light);
    cursor: pointer;
    transition: var(--transition);
}

.filter-btn.active,
.filter-btn:hover {
    background: var(--gradient-primary);
    border-color: var(--primary-color);
    transform: translateY(-2px);
}

.portfolio-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
}

.portfolio-item {
    background: rgba(255, 255, 255, 0.05);
    border-radius: var(--border-radius);
    overflow: hidden;
    transition: var(--transition);
    border: 1px solid rgba(255, 107, 157, 0.2);
    opacity: 0;
    transform: translateY(30px) scale(0.9);
    transition: all 0.6s cubic-bezier(0.25, 0.8, 0.25, 1);
}

.portfolio-item.visible {
    opacity: 1;
    transform: translateY(0) scale(1);
}

.portfolio-item:hover {
    transform: translateY(-10px);
    box-shadow: var(--shadow-primary);
}

.portfolio-image {
    position: relative;
    height: 200px;
    background: var(--gradient-secondary);
    overflow: hidden;
}

.portfolio-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.8);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: var(--transition);
}

.portfolio-item:hover .portfolio-overlay {
    opacity: 1;
}

.portfolio-info {
    text-align: center;
    padding: 1rem;
}

.portfolio-info h3 {
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
    color: var(--text-light);
}

.portfolio-info p {
    color: var(--text-muted);
    margin-bottom: 1rem;
}

.portfolio-links {
    display: flex;
    gap: 1rem;
    justify-content: center;
}

.portfolio-link {
    width: 40px;
    height: 40px;
    background: var(--gradient-primary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    text-decoration: none;
    transition: var(--transition);
}

.portfolio-link:hover {
    transform: scale(1.1);
}

.portfolio-content {
    padding: 1.5rem;
}

.portfolio-content h4 {
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
    color: var(--text-light);
}

.portfolio-category {
    color: var(--primary-color);
    font-size: 0.9rem;
}

/* Skills Section */
.skills {
    background: var(--bg-dark);
    position: relative;
    overflow: hidden;
}

.skills::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
        radial-gradient(circle at 20% 80%, rgba(255, 107, 157, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 80% 20%, rgba(196, 69, 105, 0.1) 0%, transparent 50%);
    z-index: 0;
}

.skills .container {
    position: relative;
    z-index: 1;
}

.skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 3rem;
    margin-top: 4rem;
    justify-items: center;
}

@media (max-width: 1200px) {
    .skills-grid {
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 2.5rem;
    }
}

@media (max-width: 768px) {
    .skills-grid {
        grid-template-columns: 1fr;
        gap: 2rem;
    }
}

.skill-category-card {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 107, 157, 0.2);
    border-radius: var(--border-radius);
    padding: 2rem;
    transition: var(--transition);
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    width: 100%;
    max-width: 400px;
}

.skill-category-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 107, 157, 0.1), transparent);
    transition: left 0.8s ease;
}

.skill-category-card:hover::before {
    left: 100%;
}

.skill-category-card:hover {
    transform: translateY(-10px);
    box-shadow: var(--shadow-primary);
    border-color: var(--primary-color);
}

.category-header {
    text-align: center;
    margin-bottom: 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
}

.category-icon {
    width: 80px;
    height: 80px;
    background: var(--gradient-primary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1rem;
    font-size: 2rem;
    color: white;
    animation: pulse 3s ease-in-out infinite;
    flex-shrink: 0;
    position: relative;
}

.category-header h3 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
    color: var(--primary-color);
    text-align: center;
    width: 100%;
}

.category-header p {
    color: var(--text-muted);
    font-size: 0.9rem;
    text-align: center;
    width: 100%;
    line-height: 1.4;
}

.skills-list-modern {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    gap: 1.5rem;
    width: 100%;
    justify-items: center;
}

.skill-card {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--border-radius);
    padding: 1.5rem;
    text-align: center;
    transition: var(--transition);
    position: relative;
    overflow: hidden;
}

.skill-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--gradient-primary);
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: -1;
}

.skill-card:hover::before {
    opacity: 0.1;
}

.skill-card:hover {
    transform: translateY(-5px) scale(1.05);
    border-color: var(--primary-color);
    box-shadow: 0 10px 25px rgba(255, 107, 157, 0.3);
}

.skill-icon {
    font-size: 2rem;
    margin-bottom: 1rem;
    color: var(--primary-color);
    animation: skillIconFloat 3s ease-in-out infinite;
}

@keyframes skillIconFloat {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-5px); }
}

.skill-info-modern {
    margin-bottom: 1rem;
}

.skill-name {
    display: block;
    font-weight: 600;
    color: var(--text-light);
    margin-bottom: 0.3rem;
    font-size: 0.9rem;
}

.skill-level {
    font-size: 0.8rem;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.skill-badge {
    display: inline-block;
    background: var(--gradient-primary);
    color: white;
    font-size: 0.7rem;
    padding: 0.3rem 0.8rem;
    border-radius: 15px;
    text-transform: uppercase;
    font-weight: 600;
    letter-spacing: 0.5px;
}

.skill-circle {
    position: relative;
    width: 60px;
    height: 60px;
    margin: 0 auto;
}

.circle-progress {
    width: 100%;
    height: 100%;
    transform: rotate(-90deg);
}

.circle-progress circle:last-child {
    stroke-dasharray: 0, 100;
    transition: stroke-dasharray 2s ease-in-out;
}

.skill-percentage {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--text-light);
}

/* ===== SERVICES SECTION ===== */
.services {
    background: var(--bg-light);
    position: relative;
    overflow: hidden;
}

.services::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
        radial-gradient(circle at 70% 30%, rgba(255, 107, 157, 0.05) 0%, transparent 50%),
        radial-gradient(circle at 30% 70%, rgba(196, 69, 105, 0.05) 0%, transparent 50%);
    z-index: 0;
}

.services .container {
    position: relative;
    z-index: 1;
}

.services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
}

.service-card {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 107, 157, 0.2);
    border-radius: var(--border-radius);
    padding: 2.5rem 2rem;
    text-align: center;
    transition: var(--transition);
    position: relative;
    overflow: hidden;
}

.service-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--gradient-primary);
    opacity: 0;
    transition: opacity 0.4s ease;
    z-index: -2;
}

.service-hover-effect {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    background: radial-gradient(circle, rgba(255, 107, 157, 0.2) 0%, transparent 70%);
    border-radius: 50%;
    transition: all 0.6s ease;
    transform: translate(-50%, -50%);
    z-index: -1;
}

.service-card:hover {
    transform: translateY(-15px);
    border-color: var(--primary-color);
    box-shadow: 
        0 20px 40px rgba(255, 107, 157, 0.3),
        0 0 0 1px rgba(255, 107, 157, 0.1);
}

.service-card:hover::before {
    opacity: 0.1;
}

.service-card:hover .service-hover-effect {
    width: 300px;
    height: 300px;
}

.service-card:hover .service-icon {
    transform: scale(1.1) rotateY(360deg);
}

.service-card:hover h3 {
    color: var(--primary-color);
}

.service-icon {
    position: relative;
    width: 80px;
    height: 80px;
    margin: 0 auto 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.6s ease;
}

.service-icon i {
    font-size: 2.5rem;
    color: var(--primary-color);
    z-index: 2;
    position: relative;
}

.icon-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--gradient-primary);
    border-radius: 50%;
    opacity: 0.1;
    animation: iconPulse 3s ease-in-out infinite;
}

@keyframes iconPulse {
    0%, 100% { 
        transform: scale(1); 
        opacity: 0.1; 
    }
    50% { 
        transform: scale(1.1); 
        opacity: 0.2; 
    }
}

.service-card h3 {
    font-size: 1.4rem;
    margin-bottom: 1rem;
    color: var(--text-light);
    transition: color 0.3s ease;
}

.service-card p {
    color: var(--text-muted);
    line-height: 1.6;
    margin-bottom: 1.5rem;
}

.service-features {
    list-style: none;
    text-align: left;
    margin-top: 1.5rem;
}

.service-features li {
    color: var(--text-muted);
    margin-bottom: 0.8rem;
    display: flex;
    align-items: center;
    gap: 0.8rem;
    transition: color 0.3s ease;
}

.service-features li i {
    color: var(--accent-color);
    font-size: 0.9rem;
    width: 16px;
}

.service-card:hover .service-features li {
    color: var(--text-light);
}

/* ===== TESTIMONIALS SECTION ===== */
.testimonials {
    background: var(--bg-dark);
    position: relative;
    overflow: hidden;
}

.testimonials::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
        radial-gradient(circle at 40% 20%, rgba(255, 107, 157, 0.08) 0%, transparent 50%),
        radial-gradient(circle at 80% 80%, rgba(196, 69, 105, 0.08) 0%, transparent 50%);
    z-index: 0;
}

.testimonials .container {
    position: relative;
    z-index: 1;
}

.testimonials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
}

.testimonial-card {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 107, 157, 0.2);
    border-radius: var(--border-radius);
    padding: 2rem;
    transition: var(--transition);
    position: relative;
    overflow: hidden;
}

.testimonial-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 107, 157, 0.1), transparent);
    transition: left 0.8s ease;
}

.testimonial-card:hover::before {
    left: 100%;
}

.testimonial-card:hover {
    transform: translateY(-10px);
    border-color: var(--primary-color);
    box-shadow: 
        0 15px 35px rgba(255, 107, 157, 0.3),
        0 0 0 1px rgba(255, 107, 157, 0.1);
}

.quote-icon {
    font-size: 2rem;
    color: var(--primary-color);
    margin-bottom: 1rem;
    opacity: 0.7;
}

.testimonial-text {
    color: var(--text-muted);
    line-height: 1.7;
    margin-bottom: 1.5rem;
    font-style: italic;
    position: relative;
    z-index: 1;
}

.rating {
    display: flex;
    gap: 0.3rem;
    margin-bottom: 1.5rem;
}

.rating i {
    color: var(--accent-color);
    font-size: 1rem;
    animation: starTwinkle 2s ease-in-out infinite;
}

.rating i:nth-child(1) { animation-delay: 0s; }
.rating i:nth-child(2) { animation-delay: 0.2s; }
.rating i:nth-child(3) { animation-delay: 0.4s; }
.rating i:nth-child(4) { animation-delay: 0.6s; }
.rating i:nth-child(5) { animation-delay: 0.8s; }

@keyframes starTwinkle {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.7; transform: scale(1.1); }
}

.testimonial-author {
    display: flex;
    align-items: center;
    gap: 1rem;
}

.author-avatar {
    position: relative;
    width: 60px;
    height: 60px;
}

.author-avatar img {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid var(--primary-color);
}

.avatar-border {
    position: absolute;
    top: -3px;
    left: -3px;
    width: calc(100% + 6px);
    height: calc(100% + 6px);
    border: 2px solid var(--primary-color);
    border-radius: 50%;
    animation: avatarPulse 3s ease-in-out infinite;
}

@keyframes avatarPulse {
    0%, 100% { 
        transform: scale(1); 
        opacity: 0.7; 
    }
    50% { 
        transform: scale(1.05); 
        opacity: 1; 
    }
}

.author-info h4 {
    color: var(--text-light);
    margin-bottom: 0.3rem;
    font-size: 1rem;
}

.author-info span {
    color: var(--text-muted);
    font-size: 0.9rem;
}

/* Dynamic Sparkle Animations */
@keyframes sparkleFloat {
    0% {
        opacity: 0;
        transform: scale(0) translateY(0);
    }
    20% {
        opacity: 1;
        transform: scale(1) translateY(-10px);
    }
    100% {
        opacity: 0;
        transform: scale(0) translateY(-60px) rotate(720deg);
    }
}

/* Party mode animations */
@keyframes partyFloat {
    0% {
        opacity: 0;
        transform: scale(0) translateY(0);
    }
    20% {
        opacity: 1;
        transform: scale(1.2) translateY(-10px);
    }
    100% {
        opacity: 0;
        transform: scale(0) translateY(-60px) rotate(720deg);
    }
}

/* Magic circle animation */
@keyframes magicCircle {
    0% {
        opacity: 0;
        transform: scale(0) rotate(0deg);
    }
    20% {
        opacity: 1;
        transform: scale(1) rotate(90deg);
    }
    80% {
        opacity: 1;
        transform: scale(1.2) rotate(270deg);
    }
    100% {
        opacity: 0;
        transform: scale(0) rotate(360deg);
    }
}

/* Secret message animation */
@keyframes secretMessageAnim {
    0% {
        opacity: 0;
        transform: translateX(-50%) translateY(-20px) scale(0.8);
    }
    20% {
        opacity: 1;
        transform: translateX(-50%) translateY(0) scale(1.1);
    }
    80% {
        opacity: 1;
        transform: translateX(-50%) translateY(0) scale(1);
    }
    100% {
        opacity: 0;
        transform: translateX(-50%) translateY(-20px) scale(0.8);
    }
}

/* Enhanced dancing animation */
@keyframes dance {
    0%, 100% { 
        transform: rotate(0deg) scale(1) translateY(0px); 
    }
    12.5% { 
        transform: rotate(-8deg) scale(1.05) translateY(-5px); 
    }
    25% { 
        transform: rotate(8deg) scale(1.02) translateY(-10px); 
    }
    37.5% { 
        transform: rotate(-5deg) scale(1.08) translateY(-5px); 
    }
    50% { 
        transform: rotate(5deg) scale(1.1) translateY(-15px); 
    }
    62.5% { 
        transform: rotate(-8deg) scale(1.05) translateY(-8px); 
    }
    75% { 
        transform: rotate(8deg) scale(1.02) translateY(-12px); 
    }
    87.5% { 
        transform: rotate(-3deg) scale(1.06) translateY(-6px); 
    }
}

/* Kawaii pulse effect */
.character-container.kawaii-mode {
    animation: kawaiiPulse 2s ease-in-out infinite;
}

@keyframes kawaiiPulse {
    0%, 100% {
        transform: scale(1);
        filter: brightness(1) saturate(1);
    }
    50% {
        transform: scale(1.05);
        filter: brightness(1.2) saturate(1.3) hue-rotate(30deg);
    }
}

/* Love hearts floating effect */
.love-heart {
    position: absolute;
    font-size: 1.5rem;
    color: #ff6b9d;
    pointer-events: none;
    z-index: 30;
    animation: loveFloat 3s ease-out forwards;
}

@keyframes loveFloat {
    0% {
        opacity: 0;
        transform: scale(0) translateY(0) rotate(0deg);
    }
    20% {
        opacity: 1;
        transform: scale(1) translateY(-20px) rotate(15deg);
    }
    80% {
        opacity: 1;
        transform: scale(1.2) translateY(-80px) rotate(-15deg);
    }
    100% {
        opacity: 0;
        transform: scale(0) translateY(-120px) rotate(45deg);
    }
}

/* Character special states */
.character-container.magical {
    filter: drop-shadow(0 0 20px var(--accent-color));
}

.character-container.ultra-kawaii {
    animation: 
        float 3s ease-in-out infinite,
        kawaiiPulse 1.5s ease-in-out infinite,
        dance 2s ease-in-out infinite;
}

/* Enhanced Animations */
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes fadeInLeft {
    from {
        opacity: 0;
        transform: translateX(-30px);
    }
    to {
        opacity: 1;
        transform: translateX(0);
    }
}

@keyframes fadeInRight {
    from {
        opacity: 0;
        transform: translateX(30px);
    }
    to {
        opacity: 1;
        transform: translateX(0);
    }
}

/* ===== ENHANCED SECTION ANIMATIONS ===== */
/* Base animation states */
section {
    transition: all 0.8s cubic-bezier(0.165, 0.84, 0.44, 1);
}

/* Fade up animation */
[data-aos="fade-up"] {
    opacity: 0;
    transform: translateY(50px);
    transition: all 0.8s cubic-bezier(0.165, 0.84, 0.44, 1);
}

[data-aos="fade-up"].visible {
    opacity: 1;
    transform: translateY(0);
}

/* Fade in animation */
[data-aos="fade-in"] {
    opacity: 0;
    transition: opacity 0.8s ease;
}

[data-aos="fade-in"].visible {
    opacity: 1;
}

/* Slide in left animation */
[data-aos="slide-in-left"] {
    opacity: 0;
    transform: translateX(-50px);
    transition: all 0.8s cubic-bezier(0.165, 0.84, 0.44, 1);
}

[data-aos="slide-in-left"].visible {
    opacity: 1;
    transform: translateX(0);
}

/* Slide in right animation */
[data-aos="slide-in-right"] {
    opacity: 0;
    transform: translateX(50px);
    transition: all 0.8s cubic-bezier(0.165, 0.84, 0.44, 1);
}

[data-aos="slide-in-right"].visible {
    opacity: 1;
    transform: translateX(0);
}

/* Scale animation */
[data-aos="scale-up"] {
    opacity: 0;
    transform: scale(0.8);
    transition: all 0.8s cubic-bezier(0.165, 0.84, 0.44, 1);
}

[data-aos="scale-up"].visible {
    opacity: 1;
    transform: scale(1);
}

/* Zoom in animation */
[data-aos="zoom-in"] {
    opacity: 0;
    transform: scale(0.6);
    transition: all 0.8s cubic-bezier(0.165, 0.84, 0.44, 1);
}

[data-aos="zoom-in"].visible {
    opacity: 1;
    transform: scale(1);
}

/* Flip animation */
[data-aos="flip-up"] {
    opacity: 0;
    transform: perspective(400px) rotateX(90deg);
    transition: all 0.8s cubic-bezier(0.165, 0.84, 0.44, 1);
}

[data-aos="flip-up"].visible {
    opacity: 1;
    transform: perspective(400px) rotateX(0deg);
}

/* Section specific enhancements */
.hero {
    animation: heroEntrance 1.2s ease-out;
}

@keyframes heroEntrance {
    0% {
        opacity: 0;
        transform: translateY(30px);
    }
    100% {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Section reveal with staggered animations */
.section-header {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.6s ease;
}

.section-header.visible {
    opacity: 1;
    transform: translateY(0);
}

/* Card animations with delays */
.service-card,
.portfolio-item,
.skill-category-card,
.testimonial-card {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.6s ease;
}

.service-card.visible,
.portfolio-item.visible,
.skill-category-card.visible,
.testimonial-card.visible {
    opacity: 1;
    transform: translateY(0);
}

/* Contact form animation */
.contact-form {
    opacity: 0;
    transform: translateX(30px);
    transition: all 0.8s ease;
}

.contact-form.visible {
    opacity: 1;
    transform: translateX(0);
}

.contact-info {
    opacity: 0;
    transform: translateX(-30px);
    transition: all 0.8s ease;
}

.contact-info.visible {
    opacity: 1;
    transform: translateX(0);
}

/* Smooth scroll behavior */
html {
    scroll-behavior: smooth;
}

/* Enhanced loading animation */
@keyframes sectionReveal {
    0% {
        opacity: 0;
        transform: translateY(40px) scale(0.95);
    }
    100% {
        opacity: 1;
        transform: translateY(0) scale(1);
    }
}

/* Section entrance with bounce effect */
.about.visible {
    animation: sectionReveal 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.services.visible {
    animation: sectionReveal 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94) 0.1s both;
}

.portfolio.visible {
    animation: sectionReveal 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94) 0.2s both;
}

.skills.visible {
    animation: sectionReveal 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94) 0.3s both;
}

.testimonials.visible {
    animation: sectionReveal 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94) 0.4s both;
}

.contact.visible {
    animation: sectionReveal 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94) 0.5s both;
}

/* ===== END SECTION ANIMATIONS ===== */

/* AOS Animation Alternatives */
[data-aos="fade-up"] {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.6s ease;
}

[data-aos="fade-up"].visible {
    opacity: 1;
    transform: translateY(0);
}

/* ===== SCROLL PROGRESS BAR ===== */
.scroll-progress {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 3px;
    z-index: 10000;
    pointer-events: none;
}

.scroll-progress-bar {
    height: 100%;
    background: var(--gradient-primary);
    width: 0%;
    transition: width 0.1s ease;
}

/* ===== CUSTOM CURSOR ===== */
.custom-cursor {
    position: fixed;
    width: 8px;
    height: 8px;
    background: var(--primary-color);
    border-radius: 50%;
    pointer-events: none;
    z-index: 9999;
    transform: translate(-50%, -50%);
    transition: transform 0.1s ease;
}

.cursor-follower {
    position: fixed;
    width: 30px;
    height: 30px;
    border: 1px solid var(--primary-color);
    border-radius: 50%;
    pointer-events: none;
    z-index: 9998;
    transform: translate(-50%, -50%);
    transition: all 0.3s ease;
    opacity: 0.5;
}

.custom-cursor.cursor-hover {
    transform: translate(-50%, -50%) scale(2);
}

.cursor-follower.cursor-hover {
    transform: translate(-50%, -50%) scale(1.5);
    opacity: 0.8;
}

/* ===== RIPPLE EFFECTS ===== */
.ripple-effect {
    position: absolute;
    border-radius: 50%;
    background: rgba(255, 107, 157, 0.3);
    transform: scale(0);
    animation: ripple 0.6s linear;
    pointer-events: none;
}

@keyframes ripple {
    to {
        transform: scale(4);
        opacity: 0;
    }
}

/* ===== ENHANCED BUTTON STYLES ===== */
.btn {
    position: relative;
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
}

.btn::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    transform: translate(-50%, -50%);
    transition: width 0.6s, height 0.6s;
}

.btn:hover::after {
    width: 300px;
    height: 300px;
}

/* ===== ENHANCED LOADING ANIMATIONS ===== */
.loading-logo .glitch {
    animation: 
        glitch 2s linear infinite,
        textShadow 1.5s ease-in-out infinite alternate;
}

@keyframes textShadow {
    0% {
        text-shadow: 
            0 0 10px var(--primary-color),
            0 0 20px var(--primary-color),
            0 0 30px var(--primary-color);
    }
    100% {
        text-shadow: 
            0 0 5px var(--primary-color),
            0 0 10px var(--primary-color),
            0 0 15px var(--primary-color);
    }
}

/* ===== ENHANCED HERO ANIMATIONS ===== */
.hero-content {
    animation: heroFadeIn 1.5s ease-out forwards;
}

@keyframes heroFadeIn {
    from {
        opacity: 0;
        transform: translateY(50px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.hero-buttons .btn {
    opacity: 0;
    transform: translateY(20px);
    animation: buttonSlideIn 0.6s ease forwards;
}

.hero-buttons .btn:first-child {
    animation-delay: 0.8s;
}

.hero-buttons .btn:last-child {
    animation-delay: 1s;
}

@keyframes buttonSlideIn {
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* ===== ENHANCED PORTFOLIO ITEMS ===== */
.portfolio-item {
    opacity: 0;
    transform: translateY(30px) scale(0.9);
    transition: all 0.6s cubic-bezier(0.25, 0.8, 0.25, 1);
}

.portfolio-item.visible {
    opacity: 1;
    transform: translateY(0) scale(1);
}

/* ===== GLOW EFFECTS ===== */
.glow-on-hover {
    position: relative;
}

.glow-on-hover::before {
    content: '';
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    border-radius: inherit;
    background: var(--gradient-primary);
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: -1;
}

.glow-on-hover:hover::before {
    opacity: 1;
    animation: glow 1.5s ease-in-out infinite alternate;
}

@keyframes glow {
    from {
        box-shadow: 0 0 10px var(--primary-color);
    }
    to {
        box-shadow: 0 0 20px var(--primary-color), 0 0 30px var(--primary-color);
    }
}

/* ===== TEXT REVEAL ANIMATIONS ===== */
.text-reveal {
    position: relative;
    overflow: hidden;
}

.text-reveal::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--gradient-primary);
    transform: translateX(-100%);
    transition: transform 0.8s ease;
}

.text-reveal.visible::before {
    transform: translateX(100%);
}

/* ===== ENHANCED FLOATING ELEMENTS ===== */
.floating-icon {
    transition: all 0.3s ease;
}

.floating-icon:hover {
    transform: translateY(-10px) scale(1.1);
    color: var(--primary-color) !important;
    background: rgba(255, 107, 157, 0.2) !important;
}

/* ===== PARALLAX ENHANCEMENTS ===== */
.parallax-element {
    transform: translateZ(0);
    will-change: transform;
}

/* ===== MOBILE OPTIMIZATIONS ===== */
@media (max-width: 768px) {
    .custom-cursor,
    .cursor-follower {
        display: none;
    }
    
    .btn::after {
        display: none;
    }
    
    .glow-on-hover::before {
        display: none;
    }
}

/* ===== ACCESSIBILITY IMPROVEMENTS ===== */
@media (prefers-reduced-motion: reduce) {
    *,
    *::before,
    *::after {
        animation-duration: 0.01ms !important;
        animation-iteration-count: 1 !important;
        transition-duration: 0.01ms !important;
    }
    
    .parallax-element {
        transform: none !important;
    }
}

/* ===== HIGH CONTRAST MODE ===== */
@media (prefers-contrast: high) {
    :root {
        --text-muted: #ffffff;
        --border-color: #ffffff;
    }
    
    .skill-card,
    .service-card,
    .testimonial-card {
        border: 2px solid white;
    }
}

/* ===== DARK MODE ENHANCEMENTS ===== */
@media (prefers-color-scheme: dark) {
    .loading-screen {
        background: #000;
    }
    
    .navbar {
        background: rgba(0, 0, 0, 0.9);
    }
}

/* ===== PRINT STYLES ===== */
@media print {
    .loading-screen,
    .scroll-progress,
    .custom-cursor,
    .cursor-follower,
    .particles,
    .floating-elements {
        display: none !important;
