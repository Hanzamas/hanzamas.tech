# Local development configuration
# Copy this file to .env and fill in your values
# IMPORTANT: Do not commit the actual .env file to git

# SMTP Configuration for Email Functions
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your@gmail.com
SMTP_PASS=your-app-password

# Admin Email for Notifications
ADMIN_EMAIL=admin@hanzamas.tech

# API Configuration
API_BASE_URL=http://localhost:5000

# Duitku API Configuration (Development)
MERCHANT_CODE=YOUR_MERCHANT_CODE
API_KEY=YOUR_API_KEY
CALLBACK_URL=https://your-callback-url/api/callback
RETURN_URL=http://localhost:3000/payment-status
DUITKU_API_URL=https://sandbox.duitku.com/webapi/api/merchant
